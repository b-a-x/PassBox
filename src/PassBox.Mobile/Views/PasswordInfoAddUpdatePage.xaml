<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PassBox.Mobile.Views.PasswordInfoAddUpdatePage"
             xmlns:vm="clr-namespace:PassBox.Mobile.ViewModels;assembly=PassBox.Mobile"
             Title="Добавление">

    <StackLayout Margin="10">
        <Label Text="Название"/>
        <Entry Placeholder="Название" Text="{Binding PasswordInfo.Name}"/>
        <BoxView HeightRequest="0.8" Color="Gray"/>

        <Label Text="Данные"/>
        <Entry Placeholder="Данные" Text="{Binding PasswordInfo.Data}"/>
        <BoxView HeightRequest="0.8" Color="Gray"/>

        <Button Text="Сохранить" Command="{Binding AddUpdatePasswordInfoCommand}"/>
        <Button Text="Назад" Command="{Binding BackCommand}"/>
    </StackLayout>
</ContentPage>