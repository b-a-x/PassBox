<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PassBox.Mobile.ViewModels;assembly=PassBox.Mobile"             
             x:Class="PassBox.Mobile.Views.LoginPage"
             Title="LoginPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{DynamicResource Primary}">

    <ContentPage.BindingContext>
        <vm:LiginPageViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <StackLayout Margin="30">
            <Image Source="logo.png" HeightRequest="70" WidthRequest="70"  HorizontalOptions="StartAndExpand"/>

            <StackLayout Margin="0,80">
                <Label Text="Welcome Back" FontSize="32" TextColor="{DynamicResource Secondary}" FontFamily="Sitka"/>
                <Label Text="Sign in to continue" FontSize="16" TextColor="{DynamicResource Secondary}" FontFamily="OpenSansRegular"/>
            </StackLayout>

            <StackLayout>
                <Label Text="UserName" FontSize="16" TextColor="{DynamicResource Secondary}" FontFamily="OpenSansRegular"/>
                <Grid Margin="0,5">
                    <Frame Opacity="0.3" BackgroundColor="White" CornerRadius="5"/>
                    <Entry BackgroundColor="Transparent" TextColor="White" PlaceholderColor="LightGray"/>
                </Grid>

                <Label Text="Password" FontSize="16" TextColor="{DynamicResource Secondary}" FontFamily="OpenSansRegular"/>
                <Grid Margin="0,5">
                    <Frame Opacity="0.3" BackgroundColor="White" CornerRadius="5"/>
                    <Entry BackgroundColor="Transparent" TextColor="White" PlaceholderColor="LightGray" IsPassword="True"/>
                </Grid>
            </StackLayout>

            <Button Text ="Sign In" Margin="0,15" BackgroundColor="{DynamicResource Secondary}" TextColor="{DynamicResource Primary}" FontFamily="OpenSansBold"/>
            <!-- 
            <StackLayout VerticalOptions="FillAndExpand" Orientation="Horizontal">
                <Label Text="Forgot Password?" FontSize="16" TextColor="{DynamicResource Secondary}" FontFamily="OpenSansRegular" HorizontalOptions="StartAndExpand" HorizontalTextAlignment="Start" VerticalOptions="EndAndExpand"/>
                <Label Text="Register" FontSize="16" TextColor="{DynamicResource Secondary}" FontFamily="OpenSansRegular" HorizontalOptions="EndAndExpand" VerticalOptions="EndAndExpand"/>
            </StackLayout>
            -->
        </StackLayout>
    </Grid>
    
