<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PassBox.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PassBox.Mobile.Views"
    xmlns:vm="clr-namespace:PassBox.Mobile.ViewModels;assembly=PassBox.Mobile"  >

    <Shell.BindingContext>
        <vm:AppShellViewModel />
    </Shell.BindingContext>
    
    <ShellContent Title="LoginPage" ContentTemplate="{DataTemplate local:LoginPage}" Route="LoginPage" FlyoutItemIsVisible="False"/>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Home" ContentTemplate="{DataTemplate local:HomePage}" Route="HomePage" />
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <StackLayout Padding="20">
            <Button Text = "Sing Out" Command="{Binding SignOutCommand}"/>
        </StackLayout>
    </Shell.FlyoutFooter>
</Shell>
